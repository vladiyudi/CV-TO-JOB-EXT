{
  "manifest_version": 3,
  "name": "SuperCV",
  "version": "1.1",
  "description": "Write tailored CV to any job on LinkedIn and generate PDF in seconds",
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.googleapis.com/*",
    "https://supercv.online/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"]
    }
  ],
  "oauth2": {
    "client_id": "47779369171-mtmbf0unr3bu9up0s46h0ihodttmo2a8.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "externally_connectable": {
    "matches": ["https://supercv.online/*"]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://www.googleapis.com https://supercv.online;"
  },
  "icons": {
    "16": "images/superCVlogo.png",
    "32": "images/superCVlogo.png",
    "48": "images/superCVlogo.png",
    "128": "images/superCVlogo.png"
  }
}
